@{
    ViewData["Title"] = "Clients";
}

@section Styles {
    <!-- BEGIN Page Level CSS-->
    <link rel="stylesheet" type="text/css" href="~/app-assets/css/core/menu/menu-types/horizontal-menu.css">
    <link rel="stylesheet" type="text/css" href="~/app-assets/css/core/colors/palette-gradient.css">
    <!-- END Page Level CSS-->
    <style>
        /* Spinner overlay */
        .loading-overlay {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(255, 255, 255, 0.8);
            display: flex;
            align-items: center;
            justify-content: center;
            z-index: 1000;
        }

        /* Spinner styling */
        .spinner {
            border: 8px solid #f3f3f3;
            border-top: 8px solid #0096FF;
            border-radius: 50%;
            width: 50px;
            height: 50px;
            animation: spin 1s linear infinite;
        }

        @@keyframes spin {
            0% {
                transform: rotate(0deg);
            }

            100% {
                transform: rotate(360deg);
            }
        }

        .view-more-icon {
            color: #138708;
            text-decoration: none;
        }

            .view-more-icon:hover {
                color: #005C29;
            }

    </style>
}

<div class="content-wrapper">
    <div class="content-header row">
        <div class="content-header-left col-md-6 col-12 mb-2">
            <h3 class="content-header-title">Client List</h3>
            <div class="row breadcrumbs-top">
                <div class="breadcrumb-wrapper col-12">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="breadcrumb-item">
                            <a href="#">Client</a>
                        </li>
                        <li class="breadcrumb-item active">
                            Client List
                        </li>
                    </ol>
                </div>
            </div>
        </div>
        <div class="content-header-right col-md-6 col-12">
            <div class="float-right">
                <a type="button" asp-controller="Client" asp-action="AddClient" class="btn btn-success"><i class="la la-plus"></i> Add New Client</a>
            </div>
        </div>
    </div>
    <div class="content-body">
        <section class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-head">
                        <div class="card-header">
                            <h4 class="card-title">Client List</h4>
                            <a class="heading-elements-toggle"><i class="la la-ellipsis-h font-medium-3"></i></a>
                            <div class="heading-elements">
                                <span class="dropdown">
                                    <button id="btnSearchDrop1" type="button" data-toggle="dropdown" aria-haspopup="true"
                                            aria-expanded="true" class="btn btn-warning btn-sm dropdown-toggle dropdown-menu-right">
                                        <i class="ft-download-cloud white"></i>
                                    </button>
                                    <span aria-labelledby="btnSearchDrop1" class="dropdown-menu mt-1 dropdown-menu-right">
                                        <a href="#" class="dropdown-item"><i class="la la-calendar"></i> Due Date</a>
                                        <a href="#" class="dropdown-item"><i class="la la-random"></i> Priority </a>
                                        <a href="#" class="dropdown-item"><i class="la la-bar-chart"></i> Balance Due</a>
                                        <a href="#" class="dropdown-item"><i class="la la-user"></i> Assign to</a>
                                    </span>
                                </span>
                                <button class="btn btn-success btn-sm"><i class="ft-settings white"></i></button>
                            </div>
                        </div>
                    </div>
                    <div class="card-content">
                        <div class="card-content collapse show">
                            <div class="card-body card-dashboard">
                                <div id="table-container" style="position:relative;">

                                    <div class="loading-overlay" id="loadingOverlay" style="display:none;">
                                        <div class="spinner"></div>
                                    </div>
                                    <table id="client-datatable" class="table table-striped dt-responsive table-bordered nowrap" style="width:100%;">
                                        <thead>
                                            <tr>
                                                <th>Othername</th>
                                                <th>Surname</th>
                                                <th>Phonenumber</th>
                                                <th>Email</th>
                                                <th>Car Plate</th>
                                                <th>Car Make/Model</th>
                                                <th>Zone</th>
                                                <th>Action</th>
                                            </tr>
                                        </thead>
                                        <tfoot>
                                            <tr>
                                                <th>Othername</th>
                                                <th>Surname</th>
                                                <th>Phonenumber</th>
                                                <th>Email</th>
                                                <th>Car Plate</th>
                                                <th>Car Make/Model</th>
                                                <th>Zone</th>
                                                <th>Action</th>
                                            </tr>
                                        </tfoot>
                                    </table>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
</div>

@section Scripts {
    <script src="~/js/client-vehicle-gridlist.js"></script>
    <script>
        $(document).ready(function(){
            //alert("Is this working?");

            window.globalGridlist = "/Client/GridList";
            getDataForClientDataTable(window.globalGridlist, 'POST','#client-datatable');
        });
    </script>
}