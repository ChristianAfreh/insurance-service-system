
@{
    ViewData["Title"] = "Add New Request";
}


<div class="content-header-left col-md-6 col-12 mb-2">
    <h3 class="content-header-title">Add Service Request</h3>
    <div class="row breadcrumbs-top">
        <div class="breadcrumb-wrapper col-12">
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a asp-controller="Home" asp-action="Index">Home</a>
                </li>
                <li class="breadcrumb-item">
                    <a asp-controller="Request" asp-action="Index">Request List</a>
                </li>
                <li class="breadcrumb-item active">
                    <a asp-controller="Request" asp-action="AddRequest">Add Request</a>
                </li>
            </ol>
        </div>
    </div>
</div>
<!-- Basic form layout section start -->
<section id="basic-form-layouts">
    <div class="card">
        <div class="card-header">
            <h4 class="card-title" id="basic-layout-form">Add New Client</h4>
            <div class="heading-elements">
                <ul class="list-inline mb-0">
                    <li><a data-action="collapse"><i class="ft-minus"></i></a></li>
                    <li><a data-action="reload"><i class="ft-rotate-cw"></i></a></li>
                    <li><a data-action="expand"><i class="ft-maximize"></i></a></li>
                    <li><a data-action="close"><i class="ft-x"></i></a></li>
                </ul>
            </div>
        </div>
        <div class="card-content collapse show">
            <div class="card-body">
                <form class="form">
                    <div class="form-body">
                        <h4 class="form-section"><i class="la la-file-text-o"></i>Request Details</h4>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="projectinput5">Request Type</label>
                                    <select id="projectinput5" name="interested" class="form-control">
                                        <option value="none" selected="" disabled="">Select Type</option>
                                        <option value="design">design</option>
                                        <option value="development">development</option>
                                        <option value="illustration">illustration</option>
                                        <option value="branding">branding</option>
                                        <option value="video">video</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="projectinput5">Insurer</label>
                                    <select id="projectinput5" name="interested" class="form-control">
                                        <option value="none" selected="" disabled="">Select Insurer</option>
                                        <option value="design">design</option>
                                        <option value="development">development</option>
                                        <option value="illustration">illustration</option>
                                        <option value="branding">branding</option>
                                        <option value="video">video</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="projectinput4">Client Cellphone</label>
                                    <input type="text" id="projectinput4" class="form-control" placeholder="+233247354789" name="phone">
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="userinput8">Description</label>
                                    <textarea id="userinput8" rows="5" class="form-control" name="bio" placeholder="Brief detail...."></textarea>
                                </div>
                            </div>
                           
                        </div>
                        <h4 class="form-section"><i class="ft-user"></i> Client Info </h4>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="projectinput4">Name</label>
                                    <input type="text" id="projectinput4" class="form-control" placeholder="Name" name="phone">
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="projectinput4">Birth Date</label>
                                    <input type="text" id="projectinput4" class="form-control" placeholder="12/10/1990" name="phone">
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="projectinput4">Vehicle Registration No.</label>
                                    <input type="text" id="projectinput4" class="form-control" placeholder="GR 123 17" name="phone">
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-actions right">
                        <button type="button" class="btn btn-warning mr-1">
                            <i class="ft-x"></i> Cancel
                        </button>
                        <button type="submit" class="btn btn-primary">
                            <i class="la la-check-square-o"></i> Save
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>
<!-- // Basic form layout section end -->